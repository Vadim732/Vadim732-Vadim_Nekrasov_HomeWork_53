@model Phone

@{
    ViewBag.Title = "Detailed view of the phone";
}

<div class="bg-dark text-white pt-4 mt-5">
    <div class="row px-5">
        <div class="col-4 border-end border-white">
            <h4 class="text-center mb-5">Info</h4>
            <p><strong>Id: </strong>@Model.Id</p>
            <p><strong>Name: </strong>@Model.Name</p>
            <p><strong>Brand: </strong>@Model.Company</p>
            <p><strong>Price: </strong>@Model.Price</p>
            <p class="text-center mt-3"><a asp-action="Create" asp-controller="Order" asp-route-phoneId="@Model.Id" class="btn btn-outline-success w-50">Make order</a></p>
            <p class="text-center mt-2"><a asp-action="Index" asp-controller="Phone" class="btn btn-outline-light w-50">To main page</a></p>
            <p class="text-center mt-2"><a asp-action="Brand" asp-controller="Phone" asp-route-phoneCompany="@Model.Company" class="btn btn-outline-light w-50">Manufacturer</a></p>
            <p class="text-center mt-2"><a asp-action="Download" asp-controller="Phone" asp-route-phoneId="@Model.Id" class="btn btn-outline-light w-50">Download info</a></p>
        </div>
        <div class="col-8 text-center">
            <img src="@Model.Image" class="img-fluid" alt="Phone image">
        </div>
    </div>
    <div class="border-top border-white">
        <h4 class="text-center mt-2">About phone</h4>
        <p class="ml-mr-2 mt-1">@Model.Characteristics</p>
    </div>
</div>
